<div class="column is-3 is-box">

  <section class="card has-text-centered m-2">
    <a href="/cities/{{locationTitle}}">

      <header class="card-header">
        <p class="card-header-title is-size-4 is-centered">
          {{locationTitle}}
        </p>
      </header>

      <div class="card-image">
        <figure class="image">
          <img src="/images/{{weatherDescription}}.jpg" alt="Weather Type Image">
        </figure>
      </div>

      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-96x96">
              <img
                src="/images/{{windDir}}.png"
                alt="Placeholder image"
              />
            </figure>
          </div>
          <div class="media-content">
                        <p class="content is-size-4">
              
            </p>
            <p class="subtitle is-5 is-centered">
              {{day}}
              <br>
              {{locationTitle}} is {{weatherDescription}}
              <br>
              Wind Max {{ maxWind }} Km/h
            </p>
            <div class="is-flex is-justify-content-space-between">
              <div><p> Low {{lowTemp}}°C</p></div>
              <div><p> High {{maxTemp}}°C</p></div>
            </div>
          </div>
        </div>
      </a>
    </section>
  </div>


